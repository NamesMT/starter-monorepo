{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalDependencies": [
    "**/.env",
    "**/.env.*"
  ],
  "globalPassThroughEnv": [
    "NODE_TLS_REJECT_UNAUTHORIZED", // Needed to dev and build with self-signed certificates
    "AWS_*", // AWS variables
    "SST_*" // SST variables
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".nuxt/**",
        ".output/**",
        "dist/**"
      ]
    },
    "lint": {},
    "test:types": {},
    "quickcheck": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:prepare": {
      "cache": false,
      "interactive": true
    },
    "deploy": {
      "cache": false,
      "dependsOn": ["build", "quickcheck"]
    }
  }
}
