{
  "name": "backend",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "imports": {
    "#src/*": "./src/*"
  },
  "scripts": {
    "lint": "eslint .",
    "test": "vitest",
    "test:types": "tsc",
    "quickcheck": "pnpm run lint && pnpm run test:types",
    "check": "pnpm lint && pnpm test:types && vitest run --coverage",
    "dev": "dotenvx run -f .env.dev.local -f .env.dev -f .env -- tsx watch src/dev.ts",
    "build": "dotenvx run -f .env.prod.local -f .env.prod -f .env -- tsdown",
    "deploy": "dotenvx run -f .env.prod.local -f .env.prod -f .env -- sh scripts/deploy.sh"
  },
  "dependencies": {
    "srvx": "^0.8.7"
  },
  "devDependencies": {
    "@hono/standard-validator": "^0.1.5",
    "@kinde-oss/kinde-typescript-sdk": "^2.13.0",
    "@local/common": "workspace:*",
    "@local/locales": "workspace:*",
    "@local/tsconfig": "workspace:*",
    "@namesmt/utils": "^0.5.17",
    "@scalar/hono-api-reference": "^0.9.18",
    "@vitest/coverage-v8": "^3.2.4",
    "arktype": "^2.1.22",
    "backend-convex": "workspace:*",
    "convex": "^1.27.0",
    "hono": "^4.9.6",
    "hono-adapter-aws-lambda": "^1.3.3",
    "hono-openapi": "^1.0.4",
    "hono-sessions": "^0.8.0",
    "petite-vue-i18n": "^11.1.12",
    "std-env": "^3.9.0",
    "tsdown": "^0.15.0",
    "vitest": "^3.2.4"
  }
}
